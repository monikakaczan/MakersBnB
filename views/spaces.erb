<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <title>Spaces - MakersBnB</title>
  </head>
  <body>

    <h1>Spaces</h1>
    <div id="list-new-space">
      <button type="button" id="list-a-space">list a space</button>
    </div>

    <script src="https://code.jquery.com/jquery-2.1.4.min.js"></script>
    <!-- <script src="new_list_form.html"></script> -->

    <!-- <script src="list_space.erb"></script> -->
    <!-- <script src="new_list_form.html"></script> -->


    <script>

      $(document).ready(function() {

        $("#list-a-space").click(function () {

          $.get("new_list_form.html", function(data){
            $("#list-new-space").html(data);
          });
        });

      });

    </script>

    <% if @space %>
    <div>
      <ul>
        <li><%= @space %></li>
      </ul>
    </div>
    <% end %>
  </body>
</html>
